<script>
  // Define an array of image URLs
var images = [
"images/room2.jpg",
"images/pic1.jpg",
"images/room1.jpg"
];

// Initialize index to track the current image
var currentIndex = 0;

// Function to change the image
function changeImage() {
// Update the image source
document.getElementById("slideshow-image").src = images[currentIndex];

// Increment index
currentIndex++;

// If index exceeds the length of images array, reset it to 0
if (currentIndex >= images.length) {
    currentIndex = 0;
}
}

// Call changeImage function every 3 seconds (adjust as needed)
setInterval(changeImage, 3000);

</script>

