<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hotel Booking Form</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .booking-form {
      width: 60%;
      margin-left: 35%;
      margin-top: 10px; 
      padding: 20px;
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    .form-check-label {
      font-weight: normal;
    }
  </style>
</head>
<body>

    <%- include('./header.ejs') %>
    <%- include('./left.ejs') %>
    
    <div class="container">
        <div class="booking-form">
          <h2 class="mb-4">Book Hotel</h2>
          <form method="post" >
            <div class="mb-3">
              <label for="name" class="form-label"> Name</label>
              <input type="text" class="form-control" name="name" required>
            </div>
            <!-- <div class="mb-3">
              <label for="number" class="form-label">Number</label>
              <input type="text" class="form-control" name="number" placeholder="Enter your phone number" required>
            </div> -->
            <div class="mb-3">
              <label for="price" class="form-label">Price</label>
              <input type="number" class="form-control" name="price" required>
            </div>
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <input type="text" class="form-control" name="description" required>
            </div>
            

            <div class="mb-3">
              <label for="image" class="form-label">Upload picture</label>
              <input type="file" class="form-control" name="image" value="<%= regdata.image %>" required>
            </div>
        

         <!-- <div class="mb-3">
          <label for="file" class="form-label">Upload file</label>
          <input type="file" class="form-control" name="file" required>
        </div> -->
            <button type="submit" class="btn btn-primary">Book Now</button>
          </form>
          
        </div>
      </div>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-REHJsj1gji/uAtwnVGSe7fgKRE8fFrlrQpNG6O8fZW/dpeQh/L0NlxF6A7WWOwAx" crossorigin="anonymous"></script>

</body>
</html>
